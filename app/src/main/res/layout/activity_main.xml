<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="com.example.calendardemo.MainBinding" />

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.pp.calendar.CalendarView
            android:id="@+id/view_calendar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:focusable="false"
            app:calendar_color_backgroud_selected="@android:color/holo_orange_dark"
            app:calendar_color_currentmonth_text="@android:color/black"
            app:calendar_color_day_flag="@android:color/holo_orange_dark"
            app:calendar_color_othermonth_text="@android:color/holo_orange_dark"
            app:calendar_color_weektitle_text="@android:color/black"
            app:calendar_day_textSize="14sp"
            app:calendar_weektitle_textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>